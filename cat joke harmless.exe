#include <windows.h>
#include <ctime>
#include <cstdlib>

const char* jokes[] = {
    "Why did the cat sit on the computer? To keep an eye on the mouse.",
    "What do you call a pile of kittens? A meowtain.",
    "Why was the cat afraid of the tree? Because of the bark!",
    "What do cats eat for breakfast? Mice Krispies.",
    "Why do cats always get their way? Because they are purr-suasive."
};

LRESULT CALLBACK WndProc(HWND hwnd, UINT msg, WPARAM wParam, LPARAM lParam) {
    switch (msg) {
        case WM_PAINT: {
            PAINTSTRUCT ps;
            HDC hdc = BeginPaint(hwnd, &ps);

            // Pick a random joke
            int jokeIdx = rand() % (sizeof(jokes)/sizeof(jokes[0]));

            RECT rect;
            GetClientRect(hwnd, &rect);
            DrawTextA(hdc, jokes[jokeIdx], -1, &rect, DT_CENTER | DT_VCENTER | DT_SINGLELINE);

            EndPaint(hwnd, &ps);
            break;
        }
        case WM_DESTROY:
            PostQuitMessage(0);
            break;
        default:
            return DefWindowProc(hwnd, msg, wParam, lParam);
    }
    return 0;
}

int WINAPI WinMain(HINSTANCE hInst, HINSTANCE, LPSTR, int nCmdShow) {
    srand((unsigned)time(0));

    const char CLASS_NAME[] = "CatJokeClass";
    WNDCLASS wc = {};
    wc.lpfnWndProc = WndProc;
    wc.hInstance = hInst;
    wc.lpszClassName = CLASS_NAME;
    wc.hbrBackground = (HBRUSH)(COLOR_WINDOW);

    RegisterClass(&wc);

    HWND hwnd = CreateWindowEx(
        0,
        CLASS_NAME,
        "Cat Joke.exe üê±",
        WS_OVERLAPPEDWINDOW ^ WS_THICKFRAME,
        CW_USEDEFAULT, CW_USEDEFAULT, 400, 180,
        NULL, NULL, hInst, NULL
    );

    ShowWindow(hwnd, nCmdShow);

    MSG msg = {};
    while (GetMessage(&msg, NULL, 0, 0)) {
        TranslateMessage(&msg);
        DispatchMessage(&msg);
    }

    return 0;
}
